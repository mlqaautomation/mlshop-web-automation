<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Web" parallel="tests" thread-count="5">
    <parameter name="browserType" value="chrome"/>
    <parameter name="url" value="https://mlshoppreprod.mlhuillier.com/"></parameter>

    <listeners>
        <listener class-name="com.utility.ExtentReporter" />
        <listener class-name="com.utility.MyTransformer" />
    </listeners>

    <test name="ShoppingCart">
        <parameter name="portno" value="4723"></parameter>
        <parameter name="deviceName" value="n/a"></parameter>
        <classes>       
            <class name="com.mlshop.test.Login">
            </class>                   
            <class name="com.mlshop.test.ShoppingCart">
            </class> 
        </classes>
    </test>
    <test name="Home" >
        <parameter name="portno" value="4725"></parameter>
        <parameter name="deviceName" value="n/a"></parameter>
        <classes>    
            <class name="com.mlshop.test.Home">
            </class>              
        </classes>
    </test>
    <test name="Shipping">
        <parameter name="portno" value="4727"></parameter>
        <parameter name="deviceName" value="n/a"></parameter>
        <classes>    
            <class name="com.mlshop.test.ShippingDetails">
            </class>             
        </classes>
    </test>
    <test name="Purchase">
        <parameter name="portno" value="4729"></parameter>
        <parameter name="deviceName" value="n/a"></parameter>
        <classes>    
            <class name="com.mlshop.test.Purchase_happyPath">
            </class>             
        </classes>
    </test>
</suite>